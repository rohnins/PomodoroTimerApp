<Window x:Class="PomodoroTimerApp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="200" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Work Duration (minutes):" />
        <TextBox x:Name="WorkDurationTextBox" />
        <Button Content="Save" Click="SaveButton_Click" Margin="0,10" />
    </StackPanel>
</Window>