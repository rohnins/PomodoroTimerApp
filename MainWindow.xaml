<Window x:Class="PomodoroTimerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PomodoroTimerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="TimerDisplay" Text="25:00" FontSize="48" TextAlignment="Center" Margin="10"/>
            <Button x:Name="StartButton" Content="Start" Width="100" Height="40" Margin="5" Click="StartButton_Click"/>
            <Button x:Name="PauseButton" Content="Pause" Width="100" Height="40" Margin="5" Click="PauseButton_Click"/>
            <Button x:Name="ResetButton" Content="Reset" Width="100" Height="40" Margin="5" Click="ResetButton_Click"/>
        </StackPanel>
    </Grid>

</Window>
